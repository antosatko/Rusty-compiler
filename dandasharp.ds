use std.io;

enum comparison {
    Equal,
    Lower,
    Higher,
}

fun matchNum(rand: int, guess: int): comparison {
    return if guess == randNum {
        comparison.Equal
    }
    else if guess < randNum {
        comparison.Lower
    } 
    else {
        comparison.Higher
    }
}

fun main() {
    int! randNum = 7;
    int guess;
    std.println("Welcome to number guessing game!");
    loop {
        std.print("Your guess: ");
        std.getInt(&guess);
        switch matchNum(randNum, guess){
            comparison.Equal {
                std.println("You won!");
                break;
            }
            comparison.Lower {
                std.println("Too low.");
            }
            comparison.Higher {
                std.println("Too high.");
            }
        }
    }
}